

<div class="panel panel default">
  <header class="panel-heading">

<div class="row">
<div class="col-sm-6">
  <h3>  NSP Customers </h3>
</div>

<div class="col-sm-6">
<h3><%= link_to 'Add New Customer', new_customer_path, class: "btn btn-primary pull-right" %></h3>
</div>

</div>


  </header>

    <div class="panel-body">

        <table id="CustomersTable" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Company name</th>
              <th>Contact name</th>

              <th>Phone</th>

              <th>Email</th>

              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>

                <td><%= link_to customer do %>
                <%= customer.company_name %>
                  <% end %>
                </td>

                <td><%= customer.contact_name %></td>

                <td><%= customer.phone %></td>

                <td><%= customer.email %></td>

                <td><%= link_to customer do %>
                  <i class="glyphicon glyphicon-eye-open"></i> <span>Details</span>
                  <% end %>
                </td>

                <td><%= link_to edit_customer_path(customer) do %>
                  <i class="glyphicon glyphicon-edit"></i> <span>Edit</span>
                  <% end %>
                </td>

                <td><%= link_to customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="glyphicon glyphicon-trash"></i> <span>Delete</span>
                  <% end %>
                </td>


              </tr>
            <% end %>
          </tbody>
        </table>





    </div><!-- /.box-body -->
</div><!-- /.box -->
