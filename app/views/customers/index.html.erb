

<div class="panel">
    <header class="panel-heading">
        NSP Customers

    </header>

    <div class="panel-body table-responsive">
        <div class="box-tools m-b-15">

          <form class="navbar-form" role="search">
            <span><%= link_to 'Add New Customer', new_customer_path, class: "btn btn-primary" %></span>
                  <!-- <div class="input-group pull-right">
                      <input type="text" class="form-control" placeholder="Search" name="q">
                      <div class="input-group-btn">
                          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                      </div>
                  </div> -->
                  </form>

        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Company name</th>
              <th>Contact name</th>

              <th>Phone</th>

              <th>Email</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.company_name %></td>
                <td><%= customer.contact_name %></td>

                <td><%= customer.phone %></td>

                <td><%= customer.email %></td>

                <td><%= link_to 'Details', customer, class: "btn btn-default btn-xs" %></td>
                <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-default btn-xs" %></td>
                <td><%= link_to 'Delete', customer, class: "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>



    </div><!-- /.box-body -->
</div><!-- /.box -->
