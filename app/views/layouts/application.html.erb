<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NspApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>


  </head>

  <body class="">


    <nav class="navbar navbar-default ">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to (image_tag("nsp1.png")), root_path, class: "navbar-brand" %>

            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">

                <li><%= link_to paint_jobs_path do %>
                <i class="glyphicon glyphicon-tint text-danger"></i> <span>Paint Jobs</span>
                <% end %></li>
                <li><a href="#">
                    <i class="glyphicon glyphicon-list-alt text-danger"></i> <span>Invoices</span>
                </a></li>

                <li><%= link_to customers_path do %>
                <i class="glyphicon glyphicon-book text-danger"></i> <span>Customers</span>
                <% end %></li>

                <li><%= link_to finishes_path do %>
                <i class="glyphicon glyphicon-adjust text-danger"></i> <span>Finishes</span>
                <% end %></li>


              </ul>
              <% if user_signed_in? %>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-user text-primary"></i>
                                  <div id="useremail" ><%= current_user.email%></div><i class="caret"></i></a>
                  <ul class="dropdown-menu">

                    <li class="dropdown-header text-center">User Account</li>
                    <li class="divider"></li>
                    <li><%= link_to  edit_user_registration_path do %>
                        <i class="fa fa-cog fa-fw pull-right text-primary"></i>
                                              Settings
                                        <% end %>
                    </li>
                    <li><%= link_to  destroy_user_session_path, method: :delete do %>
                        <i class="fa fa-ban fa-fw pull-right text-danger"></i> Logout
                        <% end %>
                    </li>
                  </ul>

                </li>
              </ul>
                <% end %>
            </div><!--/.nav-collapse -->
          </div>
        </nav>

        <div class="container">

              <!-- Main component for a primary marketing message or call to action -->
              <div class="row">

                    <%= render 'layouts/messages' %>

                  <%= yield %>

              </div>

            </div> <!-- /container -->

            <script>
            $(document).ready(function(){
            $('#JobTable').DataTable( {

aaSorting: [[0, 'desc']],
bSortable: true,

      "aoColumnDefs": [
          { 'bSortable': false, 'aTargets': [ 3,4,5 ] }
                       ]

}

);
            });

            </script>

            <footer class="footer">
                  <div class="container">
                    <p class="text-muted text-center">Copyright &copy NSP <%= Time.now.year %></p>
                  </div>
                </footer>


  </body>


</html>
