<%= form_for(paint_job) do |f| %>

  <div class="form-group">
    <%= f.label :customer %>
    <%= f.text_field :customer, required: true, class: "form-control",placeholder: "Customer" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, class: "form-control", placeholder: "Description / Job Reference" %>
  </div>

  <div class="form-group">
    <%= f.label :date_in %>
    <%= f.date_select :date_in, required: true, class: "form-control" %>
  </div>

  <div class="">
    <%= f.submit "submit", class: "btn btn-primary" %>
  </div>
<% end %>
