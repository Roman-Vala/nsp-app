

<div class="panel">
    <header class="panel-heading">
        NSP Paint Jobs

    </header>

    <div class="panel-body table-responsive">
        <div class="box-tools m-b-15">

          <form class="navbar-form" role="search">
            <span><%= link_to 'New Paint Job', new_paint_job_path, class: "btn btn-primary" %></span>
                  <div class="input-group pull-right">
                      <input type="text" class="form-control" placeholder="Search" name="q">
                      <div class="input-group-btn">
                          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                      </div>
                  </div>
                  </form>

        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date in</th>
              <th>Customer</th>
              <th>Job Reference</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @paint_jobs.reverse_each do |paint_job| %>
              <tr>
                <td><%= paint_job.date_in.strftime("%e %b %Y") %></td>
                <td><%= paint_job.customer %></td>
                <td><%= paint_job.description %></td>
                <td><%= link_to 'Show', paint_job, class: "btn btn-primary btn-xs" %></td>
                <td><%= link_to 'Edit', edit_paint_job_path(paint_job), class: "btn btn-info btn-xs" %></td>
                <td><%= link_to 'Delete', paint_job, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>



    </div><!-- /.box-body -->
</div><!-- /.box -->


