<p id="notice"><%= notice %></p>

<h1>Paint Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paint_jobs.each do |paint_job| %>
      <tr>
        <td><%= paint_job.customer %></td>
        <td><%= paint_job.description %></td>
        <td><%= link_to 'Show', paint_job %></td>
        <td><%= link_to 'Edit', edit_paint_job_path(paint_job) %></td>
        <td><%= link_to 'Destroy', paint_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

