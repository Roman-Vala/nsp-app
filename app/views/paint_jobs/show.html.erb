
<div class="panel">
    <header class="panel-heading">
        Job Details

    </header>

    <div class="panel-body table-responsive">

      <div class="  pull-right">

      <span><%= link_to "view invoice", {controller: "paint_jobs", action: "invoice"}, class: "btn btn-success" %></span>

      </div>


<table class="table table-condensed table-striped">
    <thead class="thead-inverse">
      <tr>

          <th class="col-md-9"><p>
            Customer :&nbsp;&nbsp;
            <span class="text-uppercase"><%= @paint_job.customer %></span>
          </p></th>
          <th class="col-md-2 text-center"></th>
          <th class="col-md-1 text-center"></th>
      </tr>
      <tr>

          <th class="col-md-9"><p>
            Job reference :&nbsp;&nbsp;
            <span class="text-uppercase"><%= @paint_job.description %></span>
          </p></th>
          <th class="col-md-2 text-center"></th>
          <th class="col-md-1 text-center"></th>

      </tr>
        <tr>
            <th class="col-md-9">&nbsp;&nbsp;Measurements (mm)</th>
            <th class="col-md-2 text-center">sum</th>
            <th class="col-md-1 text-center">delete</th>

        </tr>
    </thead>
    <tfoot>

      <tr>
          <td>&nbsp;&nbsp;</td>
          <td class="text-center result"><strong><%= @sum %> m<sup>2</sup></strong></td>
          <td class="text-center"></td>

      </tr>

    </tfoot>
    <tbody>



          <%= render @paint_job.measurements %>




    </tbody>






</table>
<br><br>
<div class="box-tools m-b-15">

<%= render "measurements/form" %>

</div>


</div><!-- /.box-body -->
</div><!-- /.box -->


<ul class="pager pull-left">
    <li><%= link_to 'Edit', edit_paint_job_path(@paint_job) %></li>
    <li><%= link_to 'Home', paint_jobs_path %></li>
  </ul>
