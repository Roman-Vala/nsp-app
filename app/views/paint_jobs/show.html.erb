
<div class=" col-md-8 span12-tablet">

  <div class="panel panel-default">
    <header class="panel-heading">
        <h5 class="text-uppercase">Job Details</h5>

    </header>

    <div class="panel-body">

      <div class="  pull-right">

      <span><%= link_to "view invoice", {controller: "paint_jobs", action: "invoice"}, class: "btn btn-success" %></span>

      </div>


<table class="table table-condensed table-striped">
    <thead class="thead-inverse">
      <tr>

          <th class="col-md-9"><p>
            Customer :&nbsp;&nbsp;
            <span class="text-uppercase"><%= @paint_job.paint_job_customer %></span>
          </p></th>
          <th class="col-md-2 text-center"></th>
          <th class="col-md-1 text-center"></th>
      </tr>
      <tr>

          <th class="col-md-9"><p>
            Job reference :&nbsp;&nbsp;
            <span class="text-uppercase"><%= @paint_job.description %></span>
          </p></th>
          <th class="col-md-2 text-center"></th>
          <th class="col-md-1 text-center"></th>

      </tr>

      <tr>

          <th class="col-md-9"><p>
            Job finish :&nbsp;&nbsp;
            <span class="text-uppercase"><%= @paint_job.paint_job_finish %></span>
          </p></th>
          <th class="col-md-2 text-center"></th>
          <th class="col-md-1 text-center"></th>

      </tr>

      <tr>

          <th class="col-md-9"><p>
            Date in :&nbsp;&nbsp;
            <span class=""><%= @paint_job.date_in.strftime("%e %b %Y") %></span>
          </p></th>
          <th class="col-md-2 text-center"></th>
          <th class="col-md-1 text-center"></th>

      </tr>



        <tr>
            <th class="col-md-9">&nbsp;&nbsp;Measurements (mm)</th>
            <th class="col-md-2  text-center">sum</th>
            <th class="col-md-1  text-center">delete</th>

        </tr>
    </thead>
    <tfoot>

      <tr class="divider">
          <td>&nbsp;&nbsp;</td>
          <td class="text-center result"><strong><%= @sum %> m<sup>2</sup></strong></td>
          <td class="text-center"></td>

      </tr>

      <tr>
          <td>&nbsp;&nbsp;</td>
          <td class="text-center result"><%= number_to_currency(@finish.price, precision: 0) %></td>
          <td class="text-center"></td>

      </tr>

      <tr>
          <td>&nbsp;&nbsp;</td>
          <td class="text-center result"><strong><%= number_to_currency(@total, precision: 2) %></td>
          <td class="text-center"></td>

      </tr>

    </tfoot>
    <tbody>



          <%= render @paint_job.measurements %>




    </tbody>






</table>
<br><br>
<div>

<%= render "measurements/form" %>

</div>


</div><!-- /.box-body -->

<ul class="pager pull-left">
    <li><%= link_to 'Edit', edit_paint_job_path(@paint_job) %></li>
    <li><%= link_to 'Home', paint_jobs_path %></li>
  </ul>
</div><!-- /.box -->


