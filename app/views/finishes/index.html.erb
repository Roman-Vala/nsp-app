

<div class="panel panel default">
  <header class="panel-heading">

<div class="row">
<div class="col-sm-6">
  <h3>  NSP Finishes </h3>
</div>

<div class="col-sm-6">
<h3><%= link_to 'Add New Finish', new_finish_path, class: "btn btn-primary pull-right" %></h3>
</div>

</div>


  </header>

    <div class="panel-body">

        <table id="FinishesTable" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Finish description</th>
              <th>Price</th>




              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @finishes.each do |finish| %>
              <tr>



                <td><%= finish.description %></td>
                <td><%= number_to_currency(finish.price, precision: 0) %></td>



                <td><%= link_to edit_finish_path(finish) do %>
                  <i class="glyphicon glyphicon-edit"></i> <span>Edit</span>
                  <% end %>
                </td>

                <td><%= link_to finish_path(finish), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="glyphicon glyphicon-trash"></i> <span>Delete</span>
                  <% end %>
                </td>


              </tr>
            <% end %>
          </tbody>
        </table>





    </div><!-- /.box-body -->
</div><!-- /.box -->
